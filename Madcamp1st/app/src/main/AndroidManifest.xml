<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.madcamp1st">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage = "true"
        android:theme="@style/Theme.Madcamp1st"
        android:usesCleartextTraffic="true">

        <activity android:name=".diary.NewDiaryActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".diary.EditDiaryActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".contacts.CreateContactActivity"
            android:parentActivityName=".MainActivity"/>

    </application>

</manifest>